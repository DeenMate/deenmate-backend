{
  "info": {
    "name": "DeenMate API",
    "description": "Comprehensive Islamic application backend providing access to Quran, Hadith, Prayer Times, Zakat calculations, and Islamic audio content.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.deenmate.app/api/v1",
      "type": "string"
    },
    {
      "key": "localUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    }
  ],
  "auth": {
    "type": "noauth"
  },
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": []
        },
        {
          "name": "Readiness Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/ready",
              "host": ["{{baseUrl}}"],
              "path": ["ready"]
            }
          },
          "response": []
        }
      ]
    },
