              "raw": "{{baseUrl}}/prayer/calendar?latitude=23.8103&longitude=90.4125&month=9&year=2025&method=1",
              "host": ["{{baseUrl}}"],
              "path": ["prayer", "calendar"],
              "query": [
                { "key": "latitude", "value": "23.8103" },
                { "key": "longitude", "value": "90.4125" },
                { "key": "month", "value": "9" },
                { "key": "year", "value": "2025" },
