              "raw": "{{baseUrl}}/prayer/times?latitude=23.8103&longitude=90.4125&date=2025-09-03&method=1",
              "host": ["{{baseUrl}}"],
              "path": ["prayer", "times"],
              "query": [
                { "key": "latitude", "value": "23.8103" },
                { "key": "longitude", "value": "90.4125" },
                { "key": "date", "value": "2025-09-03" },
                { "key": "method", "value": "1" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Prayer Calendar",
          "request": {
            "method": "GET",
