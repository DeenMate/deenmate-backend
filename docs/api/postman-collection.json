    {
      "name": "Finance Module",
      "item": [
        {
          "name": "Latest Gold/Silver Prices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/finance/gold-prices/latest?unit=Gram",
              "host": ["{{baseUrl}}"],
              "path": ["finance", "gold-prices", "latest"],
              "query": [
                { "key": "unit", "value": "Gram" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Historical Prices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/finance/gold-prices/history?from=2025-09-01&to=2025-09-05&metal=Gold&category=22K&preferredUnit=Vori",
              "host": ["{{baseUrl}}"],
              "path": ["finance", "gold-prices", "history"],
              "query": [
                { "key": "from", "value": "2025-09-01" },
                { "key": "to", "value": "2025-09-05" },
                { "key": "metal", "value": "Gold" },
                { "key": "category", "value": "22K" },
                { "key": "preferredUnit", "value": "Vori" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Admin Sync Gold Prices",
          "request": {
            "method": "POST",
            "header": [
              { "key": "x-admin-api-key", "value": "<REPLACE_WITH_KEY>", "type": "text" }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/sync/gold-prices",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "sync", "gold-prices"]
            }
          },
          "response": []
        }
      ]
    },
